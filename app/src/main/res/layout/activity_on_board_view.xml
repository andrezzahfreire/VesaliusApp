<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoardView">

   <me.relex.circleindicator.CircleIndicator3
       android:id="@+id/indicator"
       android:layout_width="match_parent"
       android:layout_height="48dp"
       android:layout_alignParentBottom="true"
       android:background="#54A4B6"
       app:ci_drawable="@drawable/circledot">

   </me.relex.circleindicator.CircleIndicator3>

   <androidx.viewpager2.widget.ViewPager2
       android:id="@+id/view_pager2"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_above="@id/indicator"
       android:layout_centerInParent="true"
       tools:listitem="@layout/item_page" />

   <Button
       android:id="@+id/bt_fake_swipe"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignEnd="@+id/view_pager2"
       android:layout_marginStart="20dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="20dp"
       android:layout_marginBottom="20dp"
       android:background="@drawable/container"
       android:backgroundTint="@color/azulpri"
       android:text="Pular"
       android:textColor="@color/white"
       />

   <Button
       android:id="@+id/bt_passar"
       android:layout_width="58dp"
       android:layout_height="58dp"
       android:layout_alignEnd="@id/indicator"
       android:layout_alignParentBottom="true"
       android:layout_marginVertical="10dp"
       android:layout_marginEnd="20dp"
       android:background="@drawable/btboard"
       android:textColor="@color/white" />

</RelativeLayout>